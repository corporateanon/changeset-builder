{
  "include": ["src/**/*"],

  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
